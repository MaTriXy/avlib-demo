<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.onix.streamer.demo">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">

        <activity
            android:name=".DemoActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".fragmentimpl.StreamActivity"
            android:label="@string/app_name" />

        <activity
            android:name=".custom.CustomStreamActivity"
            android:label="@string/app_name" />

        <activity
            android:name=".activityimpl.SimpleStreamActivity"
            android:label="@string/app_name" />

        <activity
            android:name=".actioncamera.ActionCamStreamActivity"
            android:label="@string/app_name" />

        <activity
            android:name=".screenactivity.ScreenStreamActivity"
            android:label="@string/app_name" />

        <activity
            android:name=".screenfragment.SimpleScreenStreamActivity"
            android:label="@string/app_name" />
    </application>

</manifest>